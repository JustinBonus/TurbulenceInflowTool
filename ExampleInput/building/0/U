FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (10 0 0);

boundaryField
{
    bottom
    {
        type        syntheticEddie;
        filterShape        gaussian;
        eddieDensity       1;
        intersection       ( 1 0 0 );
        yOffset            0;
        zOffset            0;
        value    uniform (0 0 0);
    }

    cylinder
    {
        type    fixedValue;
        value    uniform (0 0 0);
    }

    inlet
    {
        filterFactor    4;
        filterShape    gaussian;
        gridFactor    1;
        intersection    ( 1 0 0 );
        type    digitalFilter;
        value    $internalField;
        yOffset    0;
        zOffset    0;
    }

    outlet
    {
        type    zeroGradient;
    }

    side
    {
        type    slip;
    }

    top
    {
        type    slip;
    }

}

// ************************************************************************* //


